{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,

      "baseUrl": "./",  // all paths are relative to the baseUrl
      "paths": {
          "Components/*" : ["src/components/*"],
          "Containers/*" : ["src/containers/*"],
          "Actions/*" : ["src/actions/*"] ,
          "Reducers/*" : ["src/reducers/*"]     // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
      }
  },
  "exclude": [
      "node_modules"
  ]
}
